<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="stockService"
    class="fr.peralta.mycellar.application.stock.impl.StockServiceImpl"
    p:stockRepository-ref="stockRepository" />

  <bean id="userService"
    class="fr.peralta.mycellar.application.user.impl.UserServiceImpl"
    p:userRepository-ref="userRepository" />

  <bean id="countryService"
    class="fr.peralta.mycellar.application.wine.impl.CountryServiceImpl"
    p:countryRepository-ref="countryRepository" />

</beans>